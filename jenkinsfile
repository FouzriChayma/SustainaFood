pipeline {
    agent any

    stages {
        // Étape 1: Installer les dépendances
        stage('Install Dependencies') {
            steps {
                script {
                    // Charger NVM et s'assurer que la version de Node.js est installée
                    sh '''#!/bin/bash
                    export NVM_DIR="/var/lib/jenkins/.nvm"
                    [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
                    [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
                    nvm ls 20 || nvm install 20  # Installer la version 20 si elle n'est pas déjà installée
                    '''
                    
                    // Installer les dépendances du backend
                    dir('sustainafood-backend') {
                        sh 'npm install'
                    }

                    // Installer les dépendances du frontend
                    dir('sustainafood-frontend') {
                        sh 'npm install --legacy-peer-deps'
                    }
                }
            }
        }

        // Étape 2: Exécuter les tests unitaires
        stage('Run Unit Tests') {
            steps {
                script {
                    // Exécuter les tests unitaires du backend
                    dir('sustainafood-backend') {
                        sh 'npm test'  // Décommente cette ligne si tu veux exécuter les tests du backend
                    }

                    // Exécuter les tests unitaires du frontend
                    dir('sustainafood-frontend') {
                        sh 'npm test'  // Décommente cette ligne si tu veux exécuter les tests du frontend
                    }
                }
            }
        }

        // Étape 3: Build de l'application
        stage('Build Application') {
            steps {
                script {
                    // Build du backend (optionnel si nécessaire)
                    dir('sustainafood-backend') {
                        sh 'npm run build'  // Décommente si tu as besoin de construire le backend
                    }

                    // Build du frontend
                    dir('sustainafood-frontend') {
                        sh 'npm run build'
                    }
                }
            }
        }
    }
}
