pipeline {
    agent any

    stages {
        // Étape 1: Installer les dépendances
        stage('Install Dependencies') {
            steps {
                script {
                    // Installer les dépendances du backend
                    dir('sustainafood-backend') {
                        sh 'npm install'
                    }

                    // Installer les dépendances du frontend
                    dir('sustainafood-frontend') {
                        sh 'npm install --legacy-peer-deps'
                    }
                }
            }
        }

        // Étape 2: Exécuter les tests unitaires
        stage('Run Unit Tests') {
            steps {
                script {
                    // Exécuter les tests unitaires du backend
                    dir('sustainafood-backend') {
                        echo 'Running backend unit tests...'
                        sh 'npm test'
                        echo 'Backend unit tests completed.'
                    }

                    // Exécuter les tests unitaires du frontend
                    dir('sustainafood-frontend') {
                        echo 'Running frontend unit tests...'
                        sh 'npm test'
                        echo 'Frontend unit tests completed.'
                    }
                }
            }
        }

        // ✅ Étape 3: Exécuter les tests fonctionnels spécifiques 2FA et Sign-in
        stage('Run Functional Tests: 2FA and User Sign-in') {
            steps {
                script {
                    dir('sustainafood-backend') {
                        echo 'Running backend functional test for 2FA...'
                        sh 'npx jest test/user-2fa.test.js --detectOpenHandles --forceExit'

                        echo 'Running backend functional test for User Sign-in...'
                        sh 'npx jest test/user-signin.test.js --detectOpenHandles --forceExit'

                        echo 'Backend functional tests (2FA & Sign-in) completed.'
                    }
                }
            }
        }

        // Étape 4: Build de l'application
        stage('Build Application') {
            steps {
                script {
                    // Build du backend (optionnel si tu veux)
                    dir('sustainafood-backend') {
                        echo 'Building backend...'
                        // sh 'npm run build' // décommente si tu as besoin
                        echo 'Backend build completed.'
                    }

                    // Build du frontend
                    dir('sustainafood-frontend') {
                        echo 'Building frontend...'

                        // Installer les icônes manquantes (optionnel si pas dans package.json)
                        sh 'npm install @fortawesome/fontawesome-svg-core'
                        sh 'npm install @fortawesome/react-fontawesome'
                        sh 'npm install @fortawesome/free-solid-svg-icons'

                        // Build du frontend
                        sh 'npm run build'
                        echo 'Frontend build completed.'
                    }
                }
            }
        }

        // Étape 5: Analyse SonarQube
        stage('SonarQube Analysis') {
            steps {
                script {
                    sh 'node -v' // Pour vérifier la version de Node.js utilisée

                    def scannerHome = tool 'scanner' // Nom de ton scanner SonarQube configuré
                    withSonarQubeEnv {
                        // Exécuter l'analyse SonarQube
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }
    }
}
