pipeline {
    agent any

    stages {

        // 🚀 Étape 1: Démarrer MongoDB avec volume persistant
        stage('Start MongoDB') {
            steps {
                script {
                    echo '🚀 Démarrage de MongoDB avec volume persistant...'
                    // Démarrer MongoDB et garder les données dans le volume mongo-data
                    sh 'docker run -d -p 27017:27017 --name mongodb -v mongo-data:/data/db mongo || true'
                }
            }
        }

        // 📦 Étape 2: Installer les dépendances backend et frontend
        stage('Install Dependencies') {
            steps {
                script {
                    // Backend
                    dir('sustainafood-backend') {
                        echo '📦 Installation des dépendances backend...'
                        sh 'npm install'
                    }

                    // Frontend
                    dir('sustainafood-frontend') {
                        echo '📦 Installation des dépendances frontend...'
                        sh 'npm install --legacy-peer-deps'
                    }
                }
            }
        }

        // ✅ Étape 3: Exécuter les tests backend
        stage('Run Backend Unit Tests') {
            steps {
                script {
                    dir('sustainafood-backend') {
                        echo '🚀 Lancement des tests backend (Jest + Supertest)...'
                        sh 'npm test' // Lancer les tests unitaires
                    }
                }
            }
        }

        // ✅ Étape 4: (Optionnel) Exécuter les tests frontend
        stage('Run Frontend Unit Tests') {
            steps {
                script {
                    dir('sustainafood-frontend') {
                        echo '🚀 Lancement des tests frontend (si disponibles)...'
                        // Décommente la ligne suivante si tu as des tests frontend
                        // sh 'npm test'
                    }
                }
            }
        }

        // ⚙️ Étape 5: Build de l'application backend + frontend
        stage('Build Application') {
            steps {
                script {
                    // ⚙️ Backend build (optionnel si nécessaire)
                    dir('sustainafood-backend') {
                        echo '⚙️ Build backend (si applicable)...'
                        // Décommente si ton backend a besoin d'être buildé
                        // sh 'npm run build'
                    }

                    // ⚙️ Frontend build
                    dir('sustainafood-frontend') {
                        echo '⚙️ Vérification et installation des packages FontAwesome...'
                        sh 'npm install @fortawesome/fontawesome-svg-core'
                        sh 'npm install @fortawesome/react-fontawesome'
                        sh 'npm install @fortawesome/free-solid-svg-icons'

                        echo '⚙️ Lancement du build frontend...'
                        sh 'npm run build'
                    }
                }
            }
        }

        // 🔎 Étape 6: Analyse SonarQube (optionnelle, à activer si configuré)
        stage('SonarQube Analysis') {
            steps {
                script {
                    echo '🔎 Lancement de l\'analyse SonarQube...'
                    sh 'node -v' // Affiche la version de Node.js pour vérification

                    def scannerHome = tool 'scanner' // Outil SonarScanner (pré-configuré dans Jenkins)
                    withSonarQubeEnv {
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }
    }
}
